{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "ignore-gtk-theme": true,
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "control-center-margin-top": 32,
  "control-center-margin-bottom": 40,
  "control-center-margin-right": 40,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "relative-timestamps": true,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available",
  "transition-time": 50,
  "hide-on-clear": false,
  "hide-on-action": false,
  "text-empty": "Sin Notificaciones",
  "script-fail-notify": true,
  "widgets": ["buttons-grid", "title", "dnd", "mpris", "notifications"],
  "widget-config": {
    "notifications": {
      "vexpand": true
    },
    "title": {
      "text": "Notificaciones",
      "clear-all-button": true,
      "button-text": "Limpiar"
    },
    "dnd": {
      "text": "No Molestar"
    },
    "mpris": {
      "blacklist": ["firefox"],
      "image-size": 96
    },
    "buttons-grid": {
      "buttons-per-row": 4,
      "actions": [
        {
          "label": "",
          "type": "toggle",
          "command": "~/.dotfiles/bin/swaync/bluetooth-command",
          "update-command": "~/.dotfiles/bin/swaync/bluetooth-update"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "~/.dotfiles/bin/swaync/wifi-command",
          "update-command": "~/.dotfiles/bin/swaync/wifi-update"
        },
        {
          "label": "󰓅",
          "type": "toggle",
          "command": "bash -c '[[ $(powerprofilesctl get) == \"power-saver\" ]] && powerprofilesctl set performance || powerprofilesctl set power-saver'",
          "update-command": "bash -c '[[ $(powerprofilesctl get) == \"power-saver\" ]] && echo false || echo true'"
        },
        {
          "label": "",
          "command": "sh -c 'swaync-client -cp & pkexec systemctl soft-reboot'"
        }
      ]
    }
  }
}

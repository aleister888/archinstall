{
  "layer": "bottom",
  "position": "top",
  "height": 30,
  "margin": "0 24 0 24",
  "modules-left": ["hyprland/workspaces", "custom/music-metadata"],
  "modules-center": ["clock", "custom/blue-filter"],
  "modules-right": [
    "custom/battery",
    "custom/disk",
    "pulseaudio",
    "network",
    "tray",
  ],
  "custom/music-metadata": {
    "tooltip": false,
    "interval": 1,
    "exec": "music-metadata -d",
    "on-click": "music-control play-pause",
  },
  "clock": {
    "tooltip": false,
    "interval": 1,
    "format": "{:%I:%M:%S}",
    "format-alt": "{:L%A %d de %B (%m), %Y}",
    "locale": "es_ES.UTF-8",
  },
  "custom/blue-filter": {
    "tooltip": false,
    "interval": 1,
    "exec": "~/.dotfiles/bin/sb/sb-blue",
    "on-click": "setsid -f blue-toggle",
  },
  "custom/battery": {
    "tooltip": false,
    "interval": 1,
    "exec": "~/.dotfiles/bin/sb/sb-bat",
    "on-click": "~/.dotfiles/bin/sb/sb-bat-info",
  },
  "custom/disk": {
    "tooltip": false,
    "format": "󰨣 {}",
    "interval": 15,
    "exec": "df -h /home | awk '/[0-9]/ {print $4}'",
    "on-click": "~/.dotfiles/bin/sb/sb-disks-info",
  },
  "pulseaudio": {
    "tooltip": false,
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%",
    "format-muted": " {volume}%",
    "format-icons": {
      "headphone": "",
      "default": ["", ""],
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
  },
  "network": {
    "tooltip": false,
    "format": "󰈀 {ipaddr}",
    "format-wifi": "{icon} {essid} <i>{frequency}GHz</i>",
    "format-disconnected": "󰤭 N/A",
    "format-icons": ["󰤟", "󰤢", "󰤥", "󰤨"],
    "max-length": 50,
  },
  "tray": {
    "icon-size": 24,
    "spacing": 2,
  },
}

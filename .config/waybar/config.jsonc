{
  "layer": "bottom",
  "position": "top",
  "height": 30,
  "margin": "0 16 0 16",
  "modules-left": ["hyprland/workspaces"],
  // "modules-left": ["hyprland/workspaces", "custom/music-metadata"],
  "modules-center": ["clock", "privacy"],
  "modules-right": [
    "custom/battery",
    "custom/disk",
    "pulseaudio",
    "network",
    "custom/powermenu",
    "custom/blue-filter",
    "tray",
  ],
  "hyprland/workspaces": {
    "format": "{name}{windows}",
    "persistent-workspaces": {
      "*": 5,
    },
    "workspace-taskbar": {
      "enable": true,
      "format": "{icon}",
      "icon-size": 14,
      /* "lf": This only applies to swallowed lf instances, as regular lf
               windows will have the $PWD as part of their name. */
      "ignore-list": ["lf"],
    },
  },
  "custom/music-metadata": {
    "tooltip": false,
    "interval": 1,
    "exec": "music-metadata -d",
    "on-click": "music-control play-pause",
  },
  "clock": {
    "tooltip": false,
    "interval": 1,
    "format": "{:%I:%M:%S}",
    "on-click": "swaync-client -t",
  },
  "privacy": {
    "icon-size": 20,
  },
  "custom/battery": {
    "tooltip": false,
    "interval": 1,
    "exec": "~/.dotfiles/bin/sb/sb-bat",
    "on-click": "~/.dotfiles/bin/sb/sb-bat-info",
  },
  "custom/disk": {
    "tooltip": false,
    "format": "󰨣 {}",
    "interval": 15,
    "exec": "df -h /home | awk '/[0-9]/ {print $4}'",
    "on-click": "~/.dotfiles/bin/sb/sb-disks-info",
  },
  "pulseaudio": {
    "tooltip": false,
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%",
    "format-muted": " {volume}%",
    "format-icons": {
      "headphone": "",
      "default": ["", ""],
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "volinc 5",
    "on-scroll-down": "volinc -5",
  },
  "network": {
    "tooltip": false,
    "interval": 1,
    "format": "󰈀 N/A",
    "format-disconnected": "󰤭 N/A",
    "format-ethernet": "󰈀 {ifname}",
    "format-wifi": "{icon} {essid} {frequency}GHz",
    "format-alt": "󰏔 {bandwidthDownBytes} 󰏕 {bandwidthUpBytes}",
    "format-icons": ["󰤟", "󰤢", "󰤥", "󰤨"],
    "max-length": 50,
  },
  "custom/powermenu": {
    "tooltip": false,
    "format": "⏻",
    "on-click": "~/.dotfiles/bin/powermenu",
  },
  "custom/blue-filter": {
    "tooltip": false,
    "format": "{}",
    "interval": 1,
    "exec": "~/.dotfiles/bin/sb/blue-status",
    "on-click": "~/.dotfiles/bin/sb/blue-toggle",
  },
  "tray": {
    "icon-size": 24,
    "spacing": 2,
    "icons": {
      "discord": "/usr/share/icons/Papirus/24x24/panel/discord-tray.svg",
    },
  },
}

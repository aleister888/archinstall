#!/bin/bash
# shellcheck disable=SC2034,SC1091

source "$HOME/.dotfiles/assets/shell/shell-utils"

DMENU="wofi --show dmenu -L 5"
LOG_DIR="$(init_log android_mount)"
MOUNT_LOG="$LOG_DIR/mount.log"
UNMOUNT_LOG="$LOG_DIR/unmount.log"
TMP_DIR=$(get_tmp android_mounts)
BASENAME="$TMP_DIR/mount_"

notify() {
	notify-send -e -i usb "$1" "$2"
}

clean_mtpfs_dirs() {
	ls /tmp/simple-mtpfs-* || return

	if pgrep simple-mtpfs; then
		pkexec pkill simple-mtpfs
		pkexec rm -rf /tmp/simple-mtpfs-*
	else
		rm -rf /tmp/simple-mtpfs-*
	fi
}

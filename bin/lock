#!/bin/sh

# Secuencia de comandos que usamos para bloquear el equipo

trap 'hyprlock' EXIT

music-control -q pause                   # Pausamos la música
$HIDE_NOTIFICATIONS                      # Limpiamos las notificaciones
[ "$(playerctl status)" = "Playing" ] && # Silenciamos el audio (si hay medios reproducción)
	pactl set-sink-mute @DEFAULT_SINK@ 1

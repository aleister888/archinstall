#!/bin/sh
# shellcheck disable=SC1091

# Activar/Desactivar hyprsunset (Filtro de la luz azul)

. "$HOME/.dotfiles/assets/shell/shell-utils-sh"

init_log status_bar

NOTIFY="notify-send -e -a hyprsunset -t 1500 -i screensaver"

$HIDE_NOTIFICATIONS

if pgrep hyprsunset; then
	pkill hyprsunset
	$NOTIFY "hyprsunset 󰌵" 'Filtro desactivado'
else
	setsid -f hyprsunset -t 4000 -g 80 >"$LOG_DIR"/blue-toggle.log 2>&1
	$NOTIFY "hyprsunset 󰹏" 'Filtro activado'
fi

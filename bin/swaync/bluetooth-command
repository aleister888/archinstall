#!/bin/sh
# shellcheck disable=SC1091

. "$HOME/.dotfiles/assets/shell/shell-utils-sh"

has_bluetooth_device || exit

# Si el dispositivo bluetooth esta bloqueado por software, lo desbloqueamos
rfkill list bluetooth | grep -q "Soft blocked: yes" &&
	sudo /usr/bin/rfkill unblock bluetooth

# Usamos 'echo show | bluetoothctl', por que aveces bluetoothctl show no
# funciona y no devuelve ning√∫n output
if echo show | bluetoothctl | grep -q "Powered: yes"; then
	bluetoothctl power off
else
	bluetoothctl power on
fi

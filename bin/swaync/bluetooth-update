#!/bin/sh
# shellcheck disable=SC1091

. "$HOME/.dotfiles/assets/shell/shell-utils-sh"

if has_bluetooth_device; then
	# Si el dispositivo tiene una tarjeta bluetooth entonces el estado del
	# botón cambia en función de si el bluetooth esta activado o no
	#
	# Usamos 'echo show | bluetoothctl', por que aveces bluetoothctl show no
	# funciona y no devuelve ningún output
	if echo show | bluetoothctl | grep -q "Powered: yes"; then
		echo true
	else
		echo false
	fi
else
	# Si el dispositivo no tiene una tarjeta bluetooth entonces el botón del
	# panel debe permanecer siempre inactivo
	echo false
fi

#!/bin/sh

TIMEOUT=30

if pgrep swayidle >/dev/null; then
	pkill swayidle

	notify-send -i preferences-system-notifications \
		"Modo presentaci칩n activado" "La pantalla no se apagar치"
else
	notify-send -i preferences-system-notifications \
		"Modo presentaci칩n desactivado" "La pantalla se apagar치 tras ${TIMEOUT}s de inactividad"

	swayidle -w timeout $TIMEOUT \
		'hyprctl dispatch dpms off' resume 'hyprctl dispatch dpms on'
fi

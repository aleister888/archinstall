#!/bin/sh

# Salimos si el dispositivo no tiene una tarjeta wifi
if ! { lspci | grep -qi wireless || lsusb | grep -qi wireless; }; then
	notify-send -a swaync "WiFi" "El dispositivo no tiene una tarjeta WiFi"
	exit
fi

if [ "$(nmcli radio wifi)" = "enabled" ]; then
	nmcli radio wifi off
else
	nmcli radio wifi on
fi

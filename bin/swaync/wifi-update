#!/bin/sh

if { lspci | grep -qi wireless || lsusb | grep -qi wireless; }; then
	# Si el dispositivo tiene una tarjeta wifi entonces el estado del
	# botón cambia en función de si el wifi esta activado o no
	if [ "$(nmcli radio wifi)" = "enabled" ]; then
		echo true
	else
		echo false
	fi
else
	# Si el dispositivo no tiene una tarjeta wifi entonces el botón del
	# panel debe permanecer siempre inactivo
	echo false
fi

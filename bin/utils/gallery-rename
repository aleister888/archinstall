#!/bin/bash

help_msg() {
	echo "Uso:"
	echo "  $(basename "$0") <directorio> [-th]"
	exit
}

# Comporobar que el archivo es del tipo correcto
filetype_test() {
	local MIMETYPE FILE_2_CHECK
	FILE_2_CHECK="$1"
	MIMETYPE="$2"
	file --dereference --brief --mime-type -- "$FILE_2_CHECK" | grep "$MIMETYPE" >/dev/null 2>&1
	return $?
}

# Funci칩n para renombrar archivos
renombrar_archivo() {
	local ARCHIVO NOMBRE_ARCHIVO EXTENSION NUEVO_NOMBRE NUEVO_ARCHIVO TIPO
	ARCHIVO="$1"
	NOMBRE_ARCHIVO="$(basename "$ARCHIVO")"
	EXTENSION="${ARCHIVO##*.}" # Extraer la extensi칩n del archivo

	# FORMATO: YEAR-MONTH-DAY_HOUR-MINUTE-SECOND.*\.EXTENSION"

	# Fotos (Android)
	if [[ $NOMBRE_ARCHIVO =~ IMG_(20[0-9]{2})([0-1][0-9])([0-3][0-9])_([0-2][0-9])([0-6][0-9])([0-6][0-9])_([0-9]{3})\..* ]]; then
		NUEVO_NOMBRE="${BASH_REMATCH[1]}-${BASH_REMATCH[2]}-${BASH_REMATCH[3]}_${BASH_REMATCH[4]}-${BASH_REMATCH[5]}-${BASH_REMATCH[6]}_${BASH_REMATCH[7]}.${EXTENSION}"
		TIPO="image"
	# Capturas de pantalla (Android)
	elif [[ $NOMBRE_ARCHIVO =~ Screenshot_(20[0-9]{2})([0-1][0-9])([0-3][0-9])-([0-2][0-9])([0-6][0-9])([0-6][0-9])_(.*)\..* ]]; then
		NUEVO_NOMBRE="${BASH_REMATCH[1]}-${BASH_REMATCH[2]}-${BASH_REMATCH[3]}_${BASH_REMATCH[4]}-${BASH_REMATCH[5]}-${BASH_REMATCH[6]}_${BASH_REMATCH[7]}.${EXTENSION}"
		TIPO="image"
	# Videos (Android)
	elif [[ $NOMBRE_ARCHIVO =~ video_(20[0-9]{2})-([0-1][0-9])-([0-3][0-9])_([0-2][0-9])-([0-6][0-9])-([0-6][0-9])\..* ]]; then
		NUEVO_NOMBRE="${BASH_REMATCH[1]}-${BASH_REMATCH[2]}-${BASH_REMATCH[3]}_${BASH_REMATCH[4]}-${BASH_REMATCH[5]}-${BASH_REMATCH[6]}.${EXTENSION}"
		TIPO="video"
	# Videos grabados (Android)
	elif [[ $NOMBRE_ARCHIVO =~ VID_(20[0-9]{2})([0-1][0-9])([0-3][0-9])_([0-2][0-9])([0-6][0-9])([0-6][0-9])_.* ]]; then
		NUEVO_NOMBRE="${BASH_REMATCH[1]}-${BASH_REMATCH[2]}-${BASH_REMATCH[3]}_${BASH_REMATCH[4]}-${BASH_REMATCH[5]}-${BASH_REMATCH[6]}.${EXTENSION}"
		TIPO="video"
	# Fotos (C치mara de Samsung)
	elif [[ $NOMBRE_ARCHIVO =~ (20[0-9]{2})([0-1][0-9])([0-3][0-9])_([0-2][0-9])([0-6][0-9])([0-6][0-9]).* ]]; then
		NUEVO_NOMBRE="${BASH_REMATCH[1]}-${BASH_REMATCH[2]}-${BASH_REMATCH[3]}_${BASH_REMATCH[4]}-${BASH_REMATCH[5]}-${BASH_REMATCH[6]}.${EXTENSION}"
		TIPO="image"
	# Fotos de Telegram (App PC)
	elif [[ $NOMBRE_ARCHIVO =~ photo_(20[0-9]{2})-([0-3][0-9])-([0-1][0-9])_([0-2][0-9])-([0-6][0-9])-([0-6][0-9]).* ]]; then
		NUEVO_NOMBRE="${BASH_REMATCH[1]}-${BASH_REMATCH[2]}-${BASH_REMATCH[3]}_${BASH_REMATCH[4]}-${BASH_REMATCH[5]}-${BASH_REMATCH[6]}.${EXTENSION}"
		TIPO="image"
	else
		return
	fi

	if [ "$TEST_FOR_TYPE" == "true" ]; then
		filetype_test "$ARCHIVO" "$TIPO" || return
	fi

	# Crear el nuevo nombre preservando la extensi칩n
	NUEVO_ARCHIVO="$(dirname "$ARCHIVO")/$NUEVO_NOMBRE"

	# Cambiamos el nombre del archivo (Si no existe uno con el mismo nombre ya)
	if [ ! -e "$NUEVO_ARCHIVO" ]; then
		mv "$ARCHIVO" "$NUEVO_ARCHIVO" &&
			echo "RENOMBRADO: $ARCHIVO -> $NUEVO_ARCHIVO"
	else
		echo -e "\e[37;41mERROR\e[0m: $ARCHIVO -> $NUEVO_ARCHIVO (Ya existe el fichero)"
	fi
}

DIRECTORIO="$1"

[ -d "$DIRECTORIO" ] || help_msg

while [ "$#" -gt 0 ]; do
	case "$1" in
	-t) TEST_FOR_TYPE="true" ;;
	-h) help_msg ;;
	esac
	shift
done

# Buscar y procesar archivos
find "$DIRECTORIO" -type f | while read -r ARCHIVO; do
	renombrar_archivo "$ARCHIVO"
done

#!/bin/sh

# Script para cambiar el volumen, controlando que no supere el l√≠mite establecido
LIMIT=130
VOL=$(($(pamixer --get-volume) + $1))
[ $VOL -gt $LIMIT ] && VOL=$LIMIT

# Establecer el nuevo volumen
pactl set-sink-volume @DEFAULT_SINK@ "${VOL}%"

# Notificar
$HIDE_NOTIFICATIONS &
notify-send -e "Volumen: $VOL%" -t 500 --hint=INT:value:$VOL &
